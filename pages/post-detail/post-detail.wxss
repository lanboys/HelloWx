/* pages/post-detail/post-detail.wxss */
.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    width: 100%;
    height: 460rpx;
    vertical-align: middle;
}

.author-container {
    margin: 10rpx;
    flex-direction: row;
}

.author-container .author-image {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin: 10rpx;
}

.author-container .author {
    vertical-align: middle;
    margin: 10rpx;
}

.author-container .const-text {
    vertical-align: middle;
    margin: 10rpx;
}

.author-container .date {
    vertical-align: middle;
    margin: 10rpx;
}

.title {
    vertical-align: middle;
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    letter-spacing: 2px;
    margin: 30rpx;
}

.divide-container {

}

.divide-container .divide-grade {
    width: 90rpx;
    height: 90rpx;
    vertical-align: middle;
    float: right;
}

.divide-container .divide-share {
    overflow: none;
    float: right;
    height: 90rpx;
    width: 90rpx;
    margin: 0 30rpx;
}

.divide{
    height: 1rpx;
    background-color: #e5e5e5;
    margin : 45rpx;
}

.detail{
    letter-spacing: 2px;
    color: #333;
    line-height: 44rpx;
    margin: 0 30rpx;
}
